<?xml version="1.0"?>
<root upper_case="true" justify="false" split_word="false" cells="true">
    <field
        name="authority_id"
        type="select"
        required="true"
        onchange="getPerson(this);"
        model="Employer:FMS"/>
    <field
        name="permit_id"
        type="select"
        required="true"
        model="Permit:Valid"
        reference="permit_id"/>
    <field
        name="date"
        required="true"
        type="date"
        format="dd-MM-yyyy"/>
</root>
