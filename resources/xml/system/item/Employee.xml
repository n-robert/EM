<?xml version="1.0"?>
<root>
    <fieldgroup name="personal" show="true">
        <field
                name="id"
                type="hidden"/>
        <field
                name="status_id"
                required="true"
                type="select"
                model="Status"/>
        <field
                name="last_name_ru"
                required="true"
                type="text"/>
        <field
                name="first_name_ru"
                required="true"
                type="text"/>
        <field
                name="middle_name_ru"
                type="text"/>
        <field
                name="last_name_en"
                type="text"/>
        <field
                name="first_name_en"
                type="text"/>
        <field
                name="birth_date"
                type="date"
                format="dd-MM-yyyy"/>
        <field
                name="birth_place"
                type="select"
                model="Employee:__pluck:birth_place"/>
        <field
                name="gender"
                type="select">
            <option value="MALE"/>
            <option value="FEMALE"/>
        </field>
        <field
                name="citizenship_id"
                required="true"
                type="select"
                model="Country"/>
        <field
                name="whence_id"
                type="select"
                model="Country"/>
        <field
                name="passport_serie"
                type="text"/>
        <field
                name="passport_number"
                required="true"
                type="text"/>
        <field
                name="passport_issuer"
                type="select"
                model="Employee:__pluck:passport_issuer"/>
        <field
                name="passport_issuer_code"
                type="text"/>
        <field
                name="passport_issued_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="passport_expired_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="address"
                type="textarea"/>
        <field
                name="phone"
                type="text"/>
    </fieldgroup>
    <fieldgroup name="job">
        <field
                name="employ_permit_id"
                type="select"
                model="Permit"/>
        <field
                name="work_permit_serie"
                type="text"/>
        <field
                name="work_permit_number"
                type="text"/>
        <field
                name="work_permit_issuer_id"
                type="select"
                model="Employer:FMS"/>
        <field
                name="work_permit_issued_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="work_permit_started_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="work_permit_expired_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="work_permit_paid_till_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="cert_number"
                type="text"/>
        <field
                name="cert_issuer"
                type="select"
                model="Employee:__pluck:cert_issuer"/>
        <field
                name="cert_issued_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="taxpayer_id"
                type="text"/>
        <field
                name="taxpayer_id_issued_date"
                type="date"
                format="dd-MM-YYYY"/>
        <fieldset name="employee_job" show="true" repeatable="true" deletable="false">
            <field
                name="id"
                type="hidden"/>
            <field
                name="employer_id"
                type="select"
                label="employer_id"
                model="Employer"/>
            <field
                name="occupation_id"
                type="select"
                model="Occupation"/>
            <field
                name="work_address_id"
                type="select"
                model="Address"/>
            <field
                name="contract_number"
                type="text"/>
            <field
                name="hired_date"
                type="date"
                format="dd-MM-YYYY"/>
            <field
                name="fired_date"
                type="date"
                format="dd-MM-YYYY"/>
        </fieldset>
    </fieldgroup>
    <fieldgroup name="immigration">
        <field
                name="invitation_number"
                type="text"/>
        <field
                name="visa_category"
                type="select">
            <option value="WORK"/>
            <option value="BUSINESS"/>
            <option value="TOURIST"/>
            <option value="TRANSIT"/>
            <option value="STUDY"/>
            <option value="SERVICE"/>
            <option value="OTHER"/>
        </field>
        <field
                name="visa_issuer_id"
                type="select"
                model="Employer:FMS"/>
        <field
                name="visa_serie"
                type="text"/>
        <field
                name="visa_number"
                type="text"/>
        <field
                name="visa_issued_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="visa_started_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="visa_expired_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="entry_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="entry_checkpoint"
                type="select"
                model="Employee:__pluck:entry_checkpoint"/>
        <field
                name="migr_card_serie"
                type="text"/>
        <field
                name="migr_card_number"
                type="text"/>
        <field
                name="migr_card_issued_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="host_id"
                type="select"
                model="Employer"/>
        <field
                name="reg_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="reg_address_id"
                type="select"
                model="Address"/>
        <field
                name="real_address_id"
                type="select"
                model="Address"/>
    </fieldgroup>
    <fieldgroup name="residency">
        <field
                name="resident_document"
                type="select">
            <option value="RESIDENT_CARD"/>
            <option value="TEMPORARY_RESIDENT_LICENSE"/>
        </field>
        <field
                name="resident_document_serie"
                type="text"/>
        <field
                name="resident_document_number"
                type="text"/>
        <field
                name="resident_document_issuer_id"
                type="select"
                model="Employer:FMS"/>
        <field
                name="resident_document_issued_date"
                type="date"
                format="dd-MM-YYYY"/>
        <field
                name="resident_document_expired_date"
                type="date"
                format="dd-MM-YYYY"/>
    </fieldgroup>
</root>
