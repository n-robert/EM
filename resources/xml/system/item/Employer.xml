<?xml version="1.0"?>
<root>
    <fieldgroup name="general" show="true">
        <field
            name="id"
            type="hidden"/>
        <field
            name="name_ru"
            type="text"
            required="true"/>
        <field
            name="full_name_ru"
            type="text"
            required="true"/>
        <field
            name="type_id"
            type="select"
            required="true"
            model="Type"/>
        <field
            name="address_id"
            type="select"
            model="Address"/>
        <field
            name="phone"
            type="text"/>
        <field
            name="email"
            type="text"/>
        <field
            name="director_id"
            type="select"
            required="true"
            model="Employee:Director"/>
        <field
            name="booker_id"
            type="select"
            model="Employee:Booker"/>
    </fieldgroup>

    <fieldgroup name="details">
        <field
            name="prime_reg_number"
            type="text"/>
        <field
            name="prime_reg_date"
            type="date"
            format="dd-MM-YYYY"/>
        <field
            name="uni_reg_number"
            type="text"/>
        <field
            name="uni_reg_date"
            type="date"
            format="dd-MM-YYYY"/>
        <field
            name="acc_reg_number"
            type="text"/>
        <field
            name="acc_reg_date"
            type="date"
            format="dd-MM-YYYY"/>
        <field
            name="taxpayer_id"
            type="text"/>
        <field
            name="taxpayer_code"
            type="text"/>
        <field
            name="active_business_type"
            type="text"/>
        <field
            name="acc_book_number"
            type="text"/>
        <field
            name="account_number"
            type="text"/>
        <field
            name="bank"
            type="text"/>
        <field
            name="ca"
            type="text"/>
        <field
            name="bic"
            type="text"/>
        <field
            name="bcc"
            type="text"/>
        <field
            name="rcoad"
            type="text"/>
    </fieldgroup>
</root>
