<?xml version="1.0"?>
<form>
    <fieldgroup name="general">
        <field
                name="id"
                type="hidden"/>
        <field
                name="name_ru"
                type="textarea"
                required="true"/>
        <field
                name="description"
                type="textarea"/>
    </fieldgroup>

    <fieldgroup name="usage-permits">
        <fieldset name="usage_permits" show="true" repeatable="true">
            <field
                    name="id"
                    type="hidden"/>
            <field
                    name="employer_id"
                    type="select"
                    label="employer_id"
                    model="Employer"/>
            <field
                    name="name_ru"
                    type="textarea"
                    label="name_ru"/>
            <field
                    name="signing_date"
                    type="date"
                    label="signing_date"/>
        </fieldset>
    </fieldgroup>
</form>